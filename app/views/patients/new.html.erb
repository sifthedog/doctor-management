<% flash.each do |type, msg| %>
  <% if type == "alert" %>
      <div class="alert alert-danger text-center">
  <% else %>
      <div class="alert alert-success text-center">
  <% end %>
  <%= msg %>
  </div>
<% end %>

<div class='container'>
    <%= form_with scope: :patient, url: patients_path, local: true do |form| %>
        <div class="card mt-5">
            <h3 class="card__border p-3">
                Dados do Paciente:
            </h3>

            <div class="card__flex p-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Nome:</span>
                    </div>
                    <%= form.text_field :name, :class => "form-control", placeholder: "Nome do paciente (ex: João)", required: true %>
                </div>
            </div>
            <div class="card__flex p-3">
                <div class="input-group mr-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">CPF:</span>
                    </div>
                    <%= form.text_field :cpf, :class => "form-control", placeholder: "Número do CPF (sem pontos)", required: true %>
                </div>
                <div class="input-group ml-2">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Data de nascimento:</span>
                      <%= form.date_select :birth_date, start_year: Date.today.year, end_year: 1920, order: [:day, :month, :year] %>
                    </div>
                </div>
            </div>
            <div class="card__border card__flex p-3">
              <span class="input-group-text" id="basic-addon1">Médico responsável:</span>
              <%= select_tag(
                'doctor_id', 
                options_for_select(
                  @doctors.map {|doctor| [doctor.name, doctor.id]}
                ), 
                class: "card__select") 
                %>
            </div>
            <div class="d-flex flex-row-reverse p-3">
                <%= form.submit "Cadastrar Paciente", :class => "btn btn-primary" %>
                <%= link_to "Voltar", patients_path, :method => :get, :class => "btn mr-3" %>
            </div>
        </div>
    <% end %>
</div>